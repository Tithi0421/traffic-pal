<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afinal.android.trafficpal.Activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/sv"
        android:layout_height="match_parent"
        android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/expandableButton3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_rounded"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/button_green"
            android:onClick="expandableButton3"
            android:paddingRight="10dp"
            android:text="@string/layout1"
            android:textColor="@android:color/white" />

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
            android:id="@+id/expandableLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expandableButton3"
            android:background="@drawable/bg_layout_rounded"
            app:ael_duration="400"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:ael_expanded="true"
            app:ael_interpolator="accelerateDecelerate"
            app:ael_orientation="vertical">



            <Button
                android:id="@+id/capture1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="30dp"
                android:text="@string/button1"
                android:textSize="15sp"
                android:background="@drawable/bg_button_rounded"
                android:textColor="@android:color/white"/>




        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <Button
        android:id="@+id/expandableButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expandableLayout3"
        android:background="@drawable/bg_button_rounded"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:drawableRight="@drawable/button_white"
        android:paddingRight="10dp"
        android:text="@string/layout2"
        android:textColor="@android:color/white" />

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expandableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expandableButton1"
        android:background="@drawable/bg_layout_rounded"
        app:ael_duration="400"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:ael_expanded="false"
        app:ael_interpolator="accelerateDecelerate"
        app:ael_orientation="vertical">

        <EditText
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/colorPrimary"
            android:lines="1"
            android:text="gj06"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="245dp"
            android:layout_marginTop="10dp"
            android:maxLength="4"
            />
        <EditText
            android:id="@+id/id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/colorPrimary"
            android:lines="1"
            android:text="20120041458"
            android:inputType="number"
            android:layout_marginLeft="145dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:maxLength="11"

            />

        <Button
            android:id="@+id/submit1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/id2"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:text="@string/submit"
            android:textSize="15dp"
            android:background="@drawable/bg_button_rounded"
            android:textColor="@android:color/white"/>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


    <Button
        android:id="@+id/expandableButton2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expandableLayout1"
        android:background="@drawable/bg_button_rounded"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableRight="@drawable/button_white"
        android:onClick="expandableButton2"
        android:paddingRight="10dp"
        android:text="@string/layout3"
        android:textColor="#fff" />

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/expandableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expandableButton2"
        android:background="@drawable/bg_layout_rounded"
        app:ael_duration="400"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:ael_expanded="false"
        app:ael_interpolator="accelerateDecelerate"
        app:ael_orientation="vertical">


        <EditText
            android:id="@+id/id3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/colorPrimary"
            android:lines="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="250dp"
            android:maxLength="4"

            />
        <EditText
            android:id="@+id/id4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/colorPrimary"
            android:lines="1"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="160dp"
            android:maxLength="2"

            />
        <EditText
            android:id="@+id/id5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/colorPrimary"
            android:lines="1"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:maxLength="4"

            />

        <Button
            android:id="@+id/submit2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/id3"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:text="@string/submit"
            android:textSize="15dp"
            android:background="@drawable/bg_button_rounded"
            android:textColor="@android:color/white"/>

    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>



        <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/line1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/expandableLayout2"
        android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/inst"
            android:layout_below="@+id/line1"
            android:id="@+id/text"
            android:textSize="15sp"
            android:typeface="serif"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>


